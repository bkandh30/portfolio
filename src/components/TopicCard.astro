---
interface Props {
  slug: string;
  title: string;
  description: string;
  postCount: number;
}

const { slug, title, description, postCount } = Astro.props;
---

<a href={`/blog/topic/${slug}`} class="topic-card group">
  <div class="card-inner">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <div class="card-footer">
      <span class="card-count">
        {postCount} {postCount === 1 ? 'post' : 'posts'}
      </span>
      <span class="card-arrow" aria-hidden="true">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</a>

<style>
  .topic-card {
    display: block;
    text-decoration: none;
    border-radius: 0.75rem;
    border: 1px solid var(--color-border-subtle);
    background: linear-gradient(
      160deg,
      color-mix(in srgb, var(--color-bg-surface) 82%, var(--color-bg-raised)),
      var(--color-bg-surface)
    );
    transition: border-color 0.25s, transform 0.2s, box-shadow 0.25s;
  }

  .topic-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow:
      0 6px 18px rgba(0, 0, 0, 0.18),
      0 0 0 1px color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .card-inner {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    height: 100%;
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    line-height: 1.3;
    color: var(--color-text);
    transition: color 0.2s;
    margin-bottom: 0.5rem;
  }

  .topic-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-description {
    font-size: 0.85rem;
    line-height: 1.55;
    color: var(--color-text-secondary);
    margin-bottom: auto;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-subtle);
  }

  .card-count {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.04em;
    color: var(--color-text-muted);
  }

  .card-arrow {
    display: flex;
    align-items: center;
    color: var(--color-text-muted);
    transition: color 0.2s, transform 0.2s;
  }

  .topic-card:hover .card-arrow {
    color: var(--color-accent);
    transform: translateX(2px);
  }

  @media (prefers-reduced-motion: reduce) {
    .topic-card,
    .card-title,
    .card-arrow {
      transition: none;
    }

    .topic-card:hover,
    .topic-card:hover .card-arrow {
      transform: none;
    }
  }
</style>
