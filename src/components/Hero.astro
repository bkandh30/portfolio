---
import { heroContent } from '@/data/site-content';
---

<section class="pt-20 sm:pt-32 pb-8" aria-label="Introduction">
  <div class="space-y-6">
    <h1 class="hero-name font-display text-4xl sm:text-5xl leading-[1.1] tracking-tight">
      {heroContent.name}
    </h1>

    <div class="flex items-center gap-3">
      <p class="font-mono text-sm tracking-wider  text-accent">
        {heroContent.role}
      </p>
      <span class="w-px h-3.5 bg-border" aria-hidden="true"></span>
      <span class="open-to-work">
        <span class="otw-dot" aria-hidden="true"></span>
        {heroContent.availability}
      </span>
    </div>

    <p class="text-base leading-relaxed text-text-secondary max-w-lg">
      {heroContent.summary}
    </p>

    <!-- Social links -->
    <div class="flex items-center gap-5 pt-2">
      <a
        href={heroContent.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label="GitHub profile (opens in a new tab)"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>

      <a
        href={heroContent.links.linkedIn}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label="LinkedIn profile (opens in a new tab)"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>

      <a
        href={heroContent.links.email}
        class="social-link"
        aria-label="Send email"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2" />
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
        </svg>
      </a>

      <span class="w-px h-4 bg-border" aria-hidden="true"></span>

      <a
        href={heroContent.links.resume}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 font-mono text-xs tracking-wider uppercase text-text-secondary transition-colors hover:text-accent-hover"
      >
        Resume
        <span class="sr-only">(opens in a new tab)</span>
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M7 7h10v10" /><path d="M7 17 17 7" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hero-name {
    background: linear-gradient(
      130deg,
      #f2ede5 0%,
      color-mix(in srgb, var(--color-text) 82%, var(--color-accent-hover)) 48%,
      var(--color-accent-hover) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .open-to-work {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.04em;
    color: #4ade80;
  }

  .otw-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #4ade80;
    box-shadow: 0 0 6px #4ade8099;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .social-link {
    color: var(--color-text-secondary);
    transition: color 0.2s, transform 0.2s;
  }

  .social-link:hover {
    color: var(--color-accent-hover);
    transform: translateY(-1px);
  }

  @media (prefers-reduced-motion: reduce) {
    .otw-dot {
      animation: none;
    }

    .social-link {
      transition: none;
    }

    .social-link:hover {
      transform: none;
    }
  }
</style>
