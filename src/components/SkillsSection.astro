---
import { skillsSectionContent } from '@/data/site-content';
---

<section class="section-block" aria-labelledby="skills-heading">
  <h2 id="skills-heading" class="section-heading">{skillsSectionContent.heading}</h2>
  <p class="section-intro">
    {skillsSectionContent.intro}
  </p>

  <ul class="skill-matrix list-none p-0 m-0">
    {skillsSectionContent.groups.map((group) => (
      <li class="skill-row">
        <h3 class="skill-row-title">{group.title}</h3>

        <ul class="skill-row-tags list-none p-0 m-0">
          {group.skills.map((skill) => (
            <li>
              <span class="skill-tag">{skill}</span>
            </li>
          ))}
        </ul>
      </li>
    ))}
  </ul>
</section>

<style>
  .skill-matrix {
    border-top: 1px solid var(--color-border-subtle);
  }

  .skill-row {
    display: grid;
    grid-template-columns: minmax(0, 11rem) 1fr;
    gap: 1rem;
    align-items: start;
    padding: 0.95rem 0;
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .skill-row-title {
    display: inline-flex;
    align-items: center;
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.76rem;
    font-weight: 650;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: color-mix(in srgb, var(--color-text-secondary) 88%, var(--color-text));
    padding: 0.12rem 0;
  }

  .skill-row-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
  }

  .skill-tag {
    display: inline-block;
    padding: 0.26rem 0.6rem;
    font-family: var(--font-mono);
    font-size: 0.69rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--color-text-secondary);
    background: color-mix(in srgb, var(--color-bg-raised) 90%, var(--color-accent-muted));
    border: 1px solid color-mix(in srgb, rgba(255, 255, 255, 0.12) 78%, var(--color-border-subtle));
    border-radius: 9999px;
    line-height: 1;
    white-space: nowrap;
    transition: border-color 0.15s, color 0.15s, background-color 0.15s;
  }

  .skill-tag:hover {
    color: var(--color-text);
    border-color: color-mix(in srgb, var(--color-accent) 26%, rgba(255, 255, 255, 0.12));
  }

  @media (max-width: 768px) {
    .skill-row {
      grid-template-columns: 1fr;
      gap: 0.65rem;
      padding: 1rem 0;
    }

    .skill-row-title {
      justify-self: start;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .skill-tag {
      transition: none;
    }
  }
</style>
