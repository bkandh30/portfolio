---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Only show h2 and h3
const filtered = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filtered.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <p class="toc-title">On this page</p>
    <ul class="toc-list">
      {filtered.map((h) => (
        <li class:list={['toc-item', { 'toc-item--nested': h.depth === 3 }]}>
          <a href={`#${h.slug}`} class="toc-link" data-toc-slug={h.slug}>
            {h.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<script is:inline>
  (function() {
    if (typeof IntersectionObserver === 'undefined') return;
    var links = document.querySelectorAll('[data-toc-slug]');
    if (!links.length) return;
    var slugs = Array.from(links).map(function(l) { return l.getAttribute('data-toc-slug'); });
    var headings = slugs.map(function(s) { return document.getElementById(s); }).filter(Boolean);
    if (!headings.length) return;

    function setActive(slug) {
      links.forEach(function(l) {
        if (l.getAttribute('data-toc-slug') === slug) {
          l.classList.add('toc-link--active');
          l.setAttribute('aria-current', 'location');
        } else {
          l.classList.remove('toc-link--active');
          l.removeAttribute('aria-current');
        }
      });
    }

    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          setActive(entry.target.id);
        }
      });
    }, { rootMargin: '0px 0px -80% 0px', threshold: 0 });

    headings.forEach(function(h) { observer.observe(h); });
    links.forEach(function(link) {
      link.addEventListener('click', function() {
        var slug = link.getAttribute('data-toc-slug');
        if (slug) setActive(slug);
      });
    });

    setActive(headings[0].id);
  })();
</script>

<style>
  .toc {
    position: sticky;
    top: 6rem;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
    padding-left: 1.5rem;
    border-left: 1px solid var(--color-border-subtle);
  }

  .toc-title {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.35rem;
  }

  .toc-item--nested {
    padding-left: 1rem;
  }

  .toc-link {
    display: block;
    font-size: 0.8rem;
    line-height: 1.55;
    color: var(--color-text-muted);
    text-decoration: none;
    padding: 0.2rem 0;
    transition: color 0.15s;
  }

  .toc-link:hover {
    color: var(--color-text-secondary);
  }

  .toc-link:focus-visible {
    color: var(--color-text);
    background: color-mix(in srgb, var(--color-bg-surface) 85%, transparent);
    border-radius: 0.25rem;
    outline: 1px solid var(--color-border);
    outline-offset: 2px;
  }

  .toc-link--active {
    color: var(--color-accent);
    font-weight: 600;
  }

  /* Hide scrollbar on TOC */
  .toc::-webkit-scrollbar {
    display: none;
  }
  .toc {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
