---
interface Props {
  name: 'home' | 'blog' | 'resume';
}

const { name } = Astro.props;
---

{name === 'home' && (
  <svg
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
    <polyline points="9 22 9 12 15 12 15 22" />
  </svg>
)}

{name === 'blog' && (
  <svg
    width="16"
    height="16"
    viewBox="0 0 24 24"
